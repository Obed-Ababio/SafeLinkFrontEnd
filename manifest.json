{
  "name": "SafeLink",
  "description": "an ext for detecting suspicious links within web pages",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {},
  "background": {
    "scripts": ["lib/jquery-3.6.0.min.js", "./background.js"],
    "persistent": true
  },
  "options_page": "static/html/options.html",
  "browser_action": {
    "default_popup": "static/html/warning_modal.html",
    "default_title": "SafeLink"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "web_accessible_resources": ["static/*"]
}
